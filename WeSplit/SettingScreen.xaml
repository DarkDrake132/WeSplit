<Window x:Class="WeSplit.SettingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WeSplit"
        mc:Ignorable="d"
        DataContext="{StaticResource SettingVM}"
        WindowStartupLocation="CenterScreen"
        Title="SettingScreen" Height="130" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel Background="#FF2C2B2B">
            <CheckBox x:Name="SettingSplashScreen" Content="Show Splashscreen!"
                  VerticalAlignment="Center" Height="50" FontSize="15" IsChecked="{Binding CheckDialog}" Foreground="White" Background="White"/>
            <Button Content="OK" Width="70" Height="30" Command="{Binding ConfirmCommand}" Background="#FF494747" BorderBrush="Transparent"/>
        </StackPanel>
    </Grid>
</Window>
